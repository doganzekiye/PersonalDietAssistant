<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.personaldietassistant" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/general_app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PersonalDietAssistant" >
        <activity
            android:name=".ui.InfoScreenActivity"
            android:exported="true"
            android:label="@string/title_activity_info_screen"
            android:theme="@style/Theme.PersonalDietAssistant.NoActionBar" />
        <activity
            android:name=".ui.IntroPagerActivity"
            android:exported="true" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true" />
        <activity
            android:name=".ui.FoodNutrientsActivity"
            android:exported="true" />
        <activity
            android:name=".ui.FoodSearchActivity"
            android:exported="true" />
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>