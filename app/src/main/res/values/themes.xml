<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PersonalDietAssistant" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    /////////////////////////////////////////////////////////////////

    <style name="PdaTextBold">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">cursive</item>
    </style>

    <style name="SplashAppName" parent="PdaTextBold">
        <item name="android:textSize">@dimen/appNameSize</item>
        <item name="android:textColor">@color/pumpkin</item>
    </style>

    /////////////////////////////////////////////////////////////////

    <style name="PdaTextNunitoRegular">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="PdaTextNunitoBold">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="PdaTextNunitoMedium">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="BoldTitle" parent="PdaTextNunitoBold">
        <item name="android:textColor">@color/page_title</item>
        <item name="android:textSize">@dimen/fontTitleSize</item>
    </style>

    <style name="SkipText" parent="PdaTextNunitoMedium">
        <item name="android:textSize">@dimen/introSkipSize</item>
        <item name="android:textColor">@color/intro_skip</item>
    </style>

    <style name="CardDescription" parent="PdaTextNunitoRegular">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">@dimen/card_description</item>
    </style>
    /////////////////////////////////////////////////////////////////////

    <style name="PdaTextMontserratRegular">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="PdaTextMontserratBold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="CardTitle" parent="PdaTextMontserratRegular">
        <item name="android:textColor">@color/plan_item_title</item>
        <item name="android:textSize">@dimen/card_title</item>
    </style>

    <style name="InfoTitle" parent="PdaTextMontserratBold">
        <item name="android:textColor">@color/page_title</item>
        <item name="android:textSize">@dimen/infoTitleSize</item>
    </style>

    <style name="InfoNameEt" parent="PdaTextMontserratRegular">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">@dimen/infoTextSize</item>
    </style>

    <style name="GenderType" parent="PdaTextMontserratRegular">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">@dimen/infoTextSize</item>
    </style>

    <style name="InfoDesc" parent="PdaTextMontserratRegular">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">@dimen/infoDescSize</item>
    </style>
    /////////////////////////////////////////////////////////////////////

    <style name="Theme.PersonalDietAssistant.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PersonalDietAssistant.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PersonalDietAssistant.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    /////////////////////////////////////////////////////////////////////
    <style name="NumberPickerTheme" parent="Theme.PersonalDietAssistant">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:textSize">@dimen/numberPickerTextSize</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/page_title</item>
    </style>

    <style name="PdaButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/green</item>
        <item name="android:layout_width">@dimen/dp0</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
    </style>

    ////////////////////////////////////////////////////////////////////

</resources>